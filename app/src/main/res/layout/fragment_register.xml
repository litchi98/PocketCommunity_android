<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/frag_rgt_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frag_rgt_name_hint"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/frag_rgt_name_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_rgt_name_null"
                android:visibility="invisible"
                android:textColor="#F66495"
                />
            <EditText
                android:id="@+id/frag_rgt_tel_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/frag_rgt_tel_hint"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/frag_rgt_tel_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_rgt_tel_null"
                android:visibility="invisible"
                android:textColor="#F66495"
                />
            <EditText
                android:id="@+id/frag_rgt_id_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frag_rgt_id_hint"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/frag_rgt_id_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frag_rgt_id_null"
                android:visibility="invisible"
                android:textColor="#F66495"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/frag_rgt_id_img"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:layout_gravity="center"
                    android:background="#F3F3F3"
                    android:src="@drawable/upload"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#F3F3F3"
                    android:layout_marginHorizontal="10dp"
                    />
                <ImageView
                    android:id="@+id/frag_rgt_contract_img"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="center"
                    android:background="#F3F3F3"
                    android:src="@drawable/upload"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="11dp"
                >
                <TextView
                    android:id="@+id/frag_rgt_id_img_null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/frag_rgt_id_img_null"
                    android:textColor="#F66495"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/frag_rgt_contract_img_null"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/frag_rgt_contract_img_null"
                    android:textColor="#F66495"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/frag_rgt_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frag_rgt_btn"
                android:textColor="#fff"
                android:textSize="20sp"
                android:enabled="false"
                android:background="@drawable/enable_radius_button"
                />

        </LinearLayout>

</LinearLayout>