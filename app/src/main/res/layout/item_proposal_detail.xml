<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:background="#FEFEFE"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/item_proposal_detail_processor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="PonyMa"
                android:gravity="right"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/item_proposal_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:textSize="12sp"
                    android:text="7-20 15:30"
                    />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow"

                    />
                <TextView
                    android:id="@+id/item_proposal_detail_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:text="跟进"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/item_proposal_detail_next_processor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="JackMa"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/dash_line"
            />

        <TextView
            android:id="@+id/item_proposal_detail_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingBottom="0dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:background="#FEFCF5"
            android:text="请JackMa关注一下这个问题，下午向我汇报."
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>