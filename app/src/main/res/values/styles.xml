<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FitsSystemWindowsTheme" parent="AppTheme"/>

    <style name="DarkStatusBarTheme" parent="FitsSystemWindowsTheme"/>

    <style name="MyTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/colorPrimaryEnable</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="MyTablayoutTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
